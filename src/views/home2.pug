doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom 
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        style 
            include stylesheets/style.css
    body 
        header
            h1 Noom
        main 
            div#welcome
                form 
                    input(placeholder="room name", required, type="text")
                    button Enter Room
            div#room   
                div#call
                    div#myStream 
                        div#myCam 
                            video#myFace(autoplay, playsinline, width="1000", height="1000")
                            div#camSet
                                button#mute Mute
                                button#camera Turn Camera Off
                                button#viewChange Show Screen
                                select#cameras
                        div#peerCam        
                            video#peerFace(autoplay, playsinline, width="1000", height="1000")

                div#chat
                    div#chatHeader
                        div#nick nickname
                    //- 기존 대화내역 리스트
                    div#chatBox
                        div#chatList
                        div#inputDiv
                            div
                                textarea(placeholder="메시지 입력...", data-focus-visible-added) 
                            button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app2.js")